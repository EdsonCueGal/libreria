---
import carrusel from "../content/carrusel.json";
---

<section>
    <div>
        <h2
            class="mt-6 mb-6 text-center font-sans text-3xl font-bold tracking-tight text-orange-500 sm:text-4xl sm:leading-none"
        >
            Libros
        </h2>
    </div>

    <div class="mx-10 overflow-x-scroll scrollbar-hide mb-4 relative px-0.5">
        <div
            class="flex snap-x snap-mandatory gap-4"
            style="width: max-content;"
        >
            {
                carrusel.map((card) => (
                    <div class="flex-none w-64 snap-center bg-white border border-gray-400 rounded-lg overflow-hidden mb-4">
                        <div>
                            <div class="relative pt-10 x-10 flex items-center justify-center">
                                <div
                                    class="absolute w-48 h-48 bottom-0 left-0 -mb-24 ml-3 opacity-20"
                                    style="background: radial-gradient(black, transparent 60%); transform: rotate3d(0, 0, 1, 20deg) scale3d(1, 0.6, 1);"
                                />

                                <img
                                    class="relative w-40 h-60 object-cover rounded"
                                    src={card.portada}
                                    alt={`Portada de ${card.titulo}`}
                                />
                            </div>
                            <div class="p-4 w-full h-50">
                                <h3 class="text-lg leading-6 font-bold text-gray-900">
                                    {card.titulo}
                                </h3>
                                <div>
                                    <span class="text-gray-600 mt-2 text-sm">
                                        {card.autor}
                                    </span>
                                </div>
                                <div>
                                    <p class="text-gray-600 mt-2 text-sm">
                                        {card.descripcion}
                                    </p>
                                </div>
                            </div>
                            <div>
                                <div class="p-4 flex justify-between items-center">
                                    <span class="text-2xl font-extrabold text-gray-900">
                                        ${card.precio.toFixed(2)}
                                    </span>
                                    <a
                                        href="#"
                                        class="text-white bg-orange-500 hover:bg-orange-400 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
                                    >
                                        Comprar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
