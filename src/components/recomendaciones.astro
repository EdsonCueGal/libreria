---
import libros from "../content/libros.json";
---

<section>
    <div>
        <h2
            class="mb-6 text-center font-sans text-3xl font-bold tracking-tight text-orange-500 sm:text-4xl sm:leading-none"
        >
            Recomendaciones
        </h2>
    </div>

    <div class="p-1 flex flex-wrap items-center justify-center gap-6">
        {
            libros.map((libro) => (
                <a href="#">
                    <div class="relative bg-orange-500 rounded-xl shadow-lg overflow-hidden w-full max-w-[280px] sm:max-w-xs flex flex-col justify-between transition-transform hover:scale-105">
                        <svg
                            class="absolute bottom-0 left-0 mb-8 scale-150 opacity-10"
                            viewBox="0 0 375 283"
                            fill="none"
                        >
                            <rect
                                x="159.52"
                                y="175"
                                width="152"
                                height="152"
                                rx="8"
                                transform="rotate(-45 159.52 175)"
                                fill="white"
                            />
                            <rect
                                y="107.48"
                                width="152"
                                height="152"
                                rx="8"
                                transform="rotate(-45 0 107.48)"
                                fill="white"
                            />
                        </svg>

                        <div class="relative pt-10 px-10 flex items-center justify-center">
                            <div
                                class="absolute w-48 h-48 bottom-0 left-0 -mb-24 ml-3 opacity-20"
                                style="background: radial-gradient(black, transparent 60%); transform: rotate3d(0, 0, 1, 20deg) scale3d(1, 0.6, 1);"
                            />

                            <img
                                class="relative w-40 h-60 object-cover rounded"
                                src={libro.portada}
                                alt={`Portada de ${libro.titulo}`}
                            />
                        </div>

                        <div class="relative text-white px-6 pb-6 mt-6">
                            <span class="block opacity-75 text-sm">
                                {libro.autor}
                            </span>
                            <div class="flex justify-between items-center mt-1">
                                <span class="block font-semibold text-lg">
                                    {libro.titulo}
                                </span>
                                <span class="bg-white rounded-full text-orange-500 text-xs font-bold px-3 py-1">
                                    ${libro.precio.toFixed(2)}
                                </span>
                            </div>
                        </div>
                        <div class="mt-2 mb-4 flex justify-center">
                            <a
                                href={`/libros/${libro.slug}`}
                                class="bg-white text-orange-500 text-xs font-bold px-4 py-2 rounded-full hover:bg-orange-100 transition"
                            >
                                Ver m√°s
                            </a>
                        </div>
                    </div>
                </a>
            ))
        }
    </div>
</section>
